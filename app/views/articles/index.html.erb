<!-- app/views/articles/index.html.erb -->
<h1 class="my-4 text-center">Articles</h1>

<div class="container">
  <div class="row mb-3">
    <div class="col-12 d-flex justify-content-end">
      <%= link_to 'New Article', new_article_path, class: 'btn btn-primary' %>
    </div>
  </div>

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card border-primary shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article, class: 'text-dark' %></h5>
            <p class="card-text text-muted">
              <%= truncate(article.content, length: 100) %>
            </p>
            <div class="d-flex justify-content-between align-items-center mt-3">
              <a href="<%= article_path(article) %>" class="btn btn-primary">Read More</a>
              <small class="text-muted"><%= time_ago_in_words(article.created_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
